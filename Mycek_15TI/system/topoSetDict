FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      topoSetDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include     "initialConditions"

actions
(
    // actuatorDisk
    {
        name 	actuatorDisk;
        type	cellSet;
        action	new;
        source	cylinderToCell;
        sourceInfo
        {
            type cylinder; 
            p1 $point1;
            p2 $point2;
            radius $radius;
        }
    }

    {
        name    actuatorDisk;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        sourceInfo
        {
            set actuatorDisk;
        }
    }
);

